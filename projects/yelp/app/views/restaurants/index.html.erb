<body>
  <h1>Add new restaurant</h1>
  <%= button_to 'New restaurant', new_restaurant_path, method: :get%>

  <h1>Listing restaurants</h1>

  <table class="indent-left">
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Min Price</th>
      <th>Max Price</th>
      <th>Description</th>
      <th>Category</th>
    </tr>

    <% @restaurant.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.min_price %></td>
        <td><%= restaurant.max_price %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.category %></td>
        <td style="padding-left: 0px;"><%= if user_signed_in? && current_user.id == restaurant.user_id
                  button_to 'Edit', edit_restaurant_path(restaurant), method: :get
                end %></td>
        <td style="padding-left: 0px;"><%= if user_signed_in? && current_user.id == restaurant.user_id
                  button_to 'Destroy', restaurant_path(restaurant),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }
                end %></td>
      </tr>
    <% end %>
  </table>
</body>
